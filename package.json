{
  "name": "very-useful-tools-to-remember",
  "version": "1.0.0",
  "description": "Very Useful Tools to Remember (VUTTR) - API simples para gerenciar um repositório de ferramentas com seus respectivos nomes, links, descrições e tags",
  "main": "",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest --run tests/integration",
    "test:e2e": "vitest --run tests/e2e",
    "build": "rimraf dist && tsc",
    "deploy": "npm run build && serverless deploy",
    "destroy": "serverless remove",
    "start": "npm run build && serverless offline start",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "setup_envs": "./scripts/setup-envs.sh",
    "migrations": "ts-node tests/migrations/migrations-cli.ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.342.0",
    "@aws-sdk/lib-dynamodb": "^3.342.0",
    "@aws-sdk/util-dynamodb": "^3.342.0",
    "@middy/core": "^4.4.3",
    "@middy/http-router": "^4.4.3",
    "@types/sinon": "^10.0.15",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "rimraf": "^5.0.1",
    "serverless": "^3.31.0",
    "sinon": "^15.1.0",
    "ts-node": "^10.9.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.115",
    "@types/node": "^20.2.5",
    "@types/serverless": "^3.12.11",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@vitest/coverage-c8": "^0.31.1",
    "@vitest/ui": "^0.31.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "serverless-offline": "^12.0.4",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  }
}
